@{
    ViewData["Title"] = "Create Page";
}
@model Category

<div class="container">
    <div class="border-dark row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Create Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary">
                @*  <i class="bi bi-plus-circle"></i> *@
                Back
            </a>
        </div>
        <form method="post" asp-controller="Category" asp-action="Create">
            <div class="row">
                <div class="col-6 mb-3">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" />
                </div> 
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control" style="width:200px">Submit</button>

                </div>
                <div class="col-6">
                    <a asp-controller="Category" class="btn btn-secondary form-control" style="width:200px" asp-action="Index">Back</a>
                </div>
            </div>
        </form>
    </div>

</div>