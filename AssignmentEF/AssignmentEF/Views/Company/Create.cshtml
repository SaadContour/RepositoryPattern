@{
    ViewData["Title"] = "Create Page";
}
@model Company
<div class="container">
    <div class="border-dark row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Create Company</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Index" class="btn btn-primary">
               @*  <i class="bi bi-plus-circle"></i> *@
                Back
            </a>
        </div>
        <form method="post" asp-controller="Company" asp-action="Create">
            <div class="row">
                <div class="col-6 mb-3">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control"/>
                </div>
                <div class="col-6 mb-3">
                    <label asp-for="EmailAddress">Email</label>
                    <input asp-for="EmailAddress" class="form-control" />
                </div>
                <div class="col-6 mb-3">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="col-6 mb-3">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control" style="width:200px">Submit</button>
            
                </div>
                <div class="col-6">
                    <a asp-controller="Company" class="btn btn-secondary form-control" style="width:200px" asp-action="Index">Back</a>

                </div>
            </div>
        </form>
    </div>

</div>