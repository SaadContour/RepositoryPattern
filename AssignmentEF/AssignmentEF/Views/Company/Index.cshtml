@{
    ViewData["Title"] = "Index Page";
}
@model IEnumerable<Company>
<div class ="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Company</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create  
            </a>
        </div>
    </div>
    <table class="table table-borderd table-striped table-dark"> 
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.EmailAddress</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>